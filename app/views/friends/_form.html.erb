<%= simple_form_for @friend, :wrapper => :inline, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), friends_path, :class => 'btn danger' %>
  </div>
<% end %>
